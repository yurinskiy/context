{
  "name": "yurinskiy/context",
  "description": "The context storage helper with type-safe lookups.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Yuriy Yurisnkiy",
      "email": "yuriyyurinskiy@yandex.ru",
      "role": "Developer"
    },
    {
      "name": "Michael Korenev",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/yurinskiy/context/issues"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.10",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "Yurinskiy\\Context\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Yurinskiy\\Context\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs-fixer": "./vendor/bin/php-cs-fixer fix -v",
    "code-style": [
      "@cs-fixer",
      "@phpstan"
    ],
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=512M",
    "test": "./vendor/bin/phpunit"
  }
}